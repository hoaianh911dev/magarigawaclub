{
  "version": 2,
  "builds": [
    {
      "src": "server.js", 
      "use": "@vercel/node",
      "config": { "distDir": "dist" }
    },
    {
      "src": "package.json", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/(.*)", "dest": "package.json" }
  ]
}